# Model - Using custom carplate-model.pt for license plate detection
MODEL_NAME=carplate-model.pt
MODEL_PATH=model/carplate-model.pt
CONFIDENCE_THRESHOLD=0.65
IOU_THRESHOLD=0.5

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=False

# GPU
USE_GPU=True

# Directories
UPLOAD_DIR=uploads
RESULTS_DIR=results
MODEL_DIR=model

# CORS
CORS_ORIGINS=*

# File Limits
MAX_FILE_SIZE=52428800
MAX_IMAGE_SIZE=1280

# DATABASE - MySQL Configuration
DATABASE_URL=mysql+pymysql://root:@localhost:3306/traffic_violations
# Format: mysql+pymysql://username:password@host:port/database_name

# OCR Settings
OCR_CONFIDENCE_THRESHOLD=0.3
MIN_PLATE_LENGTH=6

# Violation Settings
VIOLATION_CHECK_ENABLED=True
AUTO_REGISTER_PLATES=False  # Set True to auto-register new plates
